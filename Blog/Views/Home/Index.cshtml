
@{
    ViewBag.Title = "S-BLOG - HOME";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}


<section class="site-section pt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                @{ 
                    Html.RenderAction("SliderPartial", "Home");
                }

            </div>
        </div>

        <div class="row">

           @{ 
               Html.RenderAction("LastBlogsPartial", "Home");
           }
            
        </div>
    </div>
</section>
<!-- END section -->

<section class="site-section py-sm">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2 class="mb-4">BLOGLAR</h2>
            </div>
        </div>
        <div class="row blog-entries">
            <div class="col-md-12 col-lg-8 main-content">
                <div class="row">
                    @{
                        Html.RenderAction("BlogPostsPartial", "Home");

                    }
                </div>
            </div>
            <!-- END main-content -->

            <div class="col-md-12 col-lg-4 sidebar">
                <div class="sidebar-box search-form-wrap">
                    <form action="#" class="search-form">
                        <div class="form-group">
                            <span class="icon fa fa-search"></span>
                            <input type="text" class="form-control" id="s" placeholder="Type a keyword and hit enter">
                        </div>
                    </form>
                </div>
                <!-- END sidebar-box -->
                <div class="sidebar-box">
                    @{
                        Html.RenderAction("Biopartial", "Home");
                    }
                </div>
                <!-- END sidebar-box -->
                <div class="sidebar-box">
                    @{ 
                        Html.RenderAction("PopularPostPartial", "Home");
                    }
                </div>
                <!-- END sidebar-box -->

                <div class="sidebar-box">
                    @{ 
                        Html.RenderAction("BlogCategoryPartial", "Home");
                    }
                </div>
                <!-- END sidebar-box -->

                <div class="sidebar-box">
                    @{
                        Html.RenderAction("TagsPartial", "Home");
                    }
                </div>
            </div>
            <!-- END sidebar -->

        </div>
    </div>
</section>

