@model IEnumerable<Blog.Models.Model.User>

@{
    ViewBag.Title = "UsersList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>UsersList</h2>


<table class="table table-striped table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role.Yetki)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sifre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FotoURL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.UserId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Role.Yetki)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Sifre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AdSoyad)
    </td>
    <td>
        <img src=@item.FotoURL width="100" height="100" />
    </td>
    <td>
        @Html.ActionLink("Edit", "UsersEdit", new { id = item.UserId }) |
        @Html.ActionLink("Delete", "UsersDelete", new { id = item.UserId })
    </td>
</tr>
}

</table>
