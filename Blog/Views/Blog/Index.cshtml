@model IEnumerable<Blog.Models.Model.Blogs>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- jquery.datatables scripts -->
<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable(
        {
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Azerbaijan.json"
            }
        });

    });
</script>

<h2>Blog qeydləri</h2>

<a href="/Blog/Create/" class="btn btn-default">Yeni yarat</a>

<table class="table table-striped table-responsive" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlıq</th>
            <th>Kateqoriya</th>
            <th>Tarix</th>
            @*<th>İstifadəçi adi</th>*@
            <th>Foto</th>
            <th>Oxunma sayı</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogId</td>
                <td>@item.Baslik</td>
                <td>@item.Category.KategoriAd</td>
                <td>@item.Tarih</td>
                @*<td>@item.User.UserName</td>*@
                <td><img src="@item.FotoURL" width="100" height="100" /></td>
                <td>@item.Oxunma</td>
                <td>
                    <a href="/Blog/Edit/@item.BlogId">Yenilə</a>  |  <a href="/Blog/Delete/@item.BlogId">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>

