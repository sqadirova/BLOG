@model IEnumerable<Blog.Models.Model.About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>About</h2>

<br />
<table class="table table-striped table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Aciqlama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FotoURL)
        </th>
        <th>Əməliyyatlar</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td width="700">
           @Html.Raw(item.Aciqlama)
        </td>
        <td>
            <img src="@item.FotoURL" class="img-responsive" width="200" height="200" />
        </td>
        <td>
            @Html.ActionLink("Dəyiş", "Edit", new { id=item.HaqqimdaId })                   
        </td>
    </tr>
}

</table>
