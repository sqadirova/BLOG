    <div class="form-group ">
        <label for="cname" class="control-label col-lg-2">Blog başlıq<span class="required">*</span></label>
        <div class="col-lg-10">
            <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required />
        </div>
    </div>

    <div class="form-group ">
        <label for="cemail" class="control-label col-lg-2">Blog yazısı<span class="required">*</span></label>
        <div class="col-lg-10">
            <textarea name="Icerik" class="ckeditor"></textarea>
        </div>
    </div>

    <div class="form-group ">
        <label for="curl" class="control-label col-lg-2">Foto</label>
        <div class="col-lg-10">
            <input class="form-control" type="file" name="FotoURL" accept=".png,.jpg,.jpeg,.gif" />
        </div>
    </div>

    <div class="form-group ">
        <label for="cname" class="control-label col-lg-2">Tarix</label>
        <div class="col-lg-10">
            <input class="form-control" id="Tarih" name="Tarih" type="datetime" />
        </div>
    </div>

    <div class="form-group ">
        <label for="ccomment" class="control-label col-lg-2">Kateqoriya<span class="required">*</span></label>
        <div class="col-lg-10">
            @Html.DropDownList("KategoriId", null, "Kateqoriyanı seçin", new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group ">
        <label for="cname" class="control-label col-lg-2">Etiketlər</label>
        <div class="col-lg-10">
            <input type="text" id="EtiketAdi" name="EtiketAdi" data-role="tagsinput" class="bootstrap-tagsinput" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button class="btn btn-primary" type="submit">Save</button>
            <button class="btn btn-default" type="button">Cancel</button>
        </div>
    </div>

</form>